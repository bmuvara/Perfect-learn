pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Correct 'git' step syntax
                git(
                    url: 'https://github.com/bmuvara/Perfect-learn.git', // GitHub repository URL
                    branch: 'main' // The branch to checkout
                    credentialsId: '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 ---'
                )
            }
        }
        stage('Test') {
            steps {
                sh 'npm install' // Installing dependencies
                sh 'npm test'    // Running tests
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build' // Building the project
            }
        }
    }
}
